<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@color/grayBackground">

    <Button
        android:id="@+id/settings_btnDeleteMessages"
        android:layout_width="150dp"
        android:layout_centerHorizontal="true"
        android:text="DELETE MESSAGES"
        android:layout_height="40dp" />

    <Button
        android:id="@+id/settings_btnDeleteAccount"
        android:layout_width="150dp"
        android:layout_centerHorizontal="true"
        android:layout_height="40dp"
        android:text="DELETE ACCOUT"
        android:layout_below="@+id/settings_btnDeleteMessages"/>

    <Button
        android:id="@+id/settings_btnLogout"
        android:layout_width="150dp"
        android:layout_centerHorizontal="true"
        android:layout_height="40dp"
        android:text="LOGOUT"
        android:layout_below="@+id/settings_btnDeleteAccount"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:layout_toLeftOf="@id/settings_btnDeleteAccount"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@id/settings_btnDeleteAccount"
        android:clickable="false"/>

</RelativeLayout>